<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalbg" >

    <ScrollView
        android:id="@+id/profile_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView_profile"
        android:layout_marginTop="65dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/profile_username"
                style="@style/MenuDrawer.Widget.Title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_action_person_dark"
                android:editable="false"
                android:hint="Username"
                android:padding="10dp"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_password"
                style="@style/MenuDrawer.Widget.Title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_action_lock"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_email"
                style="@style/MenuDrawer.Widget.Title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_action_select_all_dark"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_date"
                style="@style/MenuDrawer.Widget.Title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_action_refresh_dark"
                android:hint="Date of Birth"
                android:inputType="date"
                android:padding="10dp"
                android:textColor="#fff" />

            <Spinner
                android:id="@+id/profile_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textColor="#FFF" />

            <Spinner
                android:id="@+id/profile_genre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textColor="#FF0000" />

            <EditText
                android:id="@+id/profile_melength"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:hint="MoodElevate length"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:textColor="#fff" 
                android:visibility="gone"/>

            <Button
                android:id="@+id/profile_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_scroll"
                android:layout_margin="10dp"
                android:text="Save changes"
                android:textColor="#fff"
                android:background="@drawable/border_white" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>